@model Menu.Models.Dish
@{
    ViewData["Title"] = "Pizza Details";
}

<div class="container">
    <div class="row">

    <div class="d-flex justify-content-center">
        <h2 style="margin-bottom: 15px">@Model.Name</h2>
    </div>

    <div class="d-flex justify-content-center">
        <img src="@Model.ImageURL" style="width: 700px; height: 400px; margin-bottom: 15px; border-radius: 6px" />
    </div>

        <h5 class="d-flex justify-content-center">Ingredients:</h5>
        <br />

    <div class="d-flex justify-content-center">
        <ul class="d-flex">
            @foreach (var item in Model.DishIngredients)
            {
                <li style="margin-right: 30px">
                    @item.Ingredient.Name
                </li>
            }
        </ul>
    </div>

    <div class="d-flex justify-content-center">
        <h4 style="margin-bottom: 20px">@Model.Price.ToString("N2")$</h4>
    </div>

    <div class="d-flex justify-content-center">
        <a class="btn" asp-action="Index" style="background-color: brown; color: white; width: 150px">Back to Menu</a>
    </div>

    </div>
</div>

