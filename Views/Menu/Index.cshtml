@model List<Menu.Models.Dish>
@{
    ViewData["Title"] = "Pizza Menu";
}

<div class="container" style="border: solid; border-radius: 10px; border-color: brown; padding-bottom: 20px; padding-top: 30px">
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-6">
                <div class="d-flex justify-content-center" style="margin-bottom: 5px">
                    <h4>@item.Name</h4>
                </div>
                <div class="d-flex justify-content-center">
                    <img src="@item.ImageURL" style="width: 300px; height: 200px; margin-bottom: 10px; border-radius: 5px"/>
                </div>
                <div class="d-flex justify-content-center" style="margin-bottom: 6px">
                    <h5>@item.Price.ToString("N2")$</h5>
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btn" asp-action="Details" asp-route-id="@item.Id" style="background-color:brown; color: white; margin-bottom: 30px">Select</a>
                </div>
            </div>
        }
    </div>
</div>
